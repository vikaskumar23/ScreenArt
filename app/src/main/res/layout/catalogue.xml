<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_height="245dp"
        app:cardCornerRadius="6dp"
        android:elevation="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/catImg"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/send" />

            <TextView
                android:id="@+id/catPro"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:text="Visiting Cards"/>

            <TextView
                android:id="@+id/catPrice"
                android:layout_marginLeft="10dp"
                android:textColor="#424242"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starts From Rs 130"/>
            <TextView
                android:id="@+id/catq"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#9E9E9E"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Units"/>

            <Button
                android:layout_marginTop="13dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E5097F"
                android:textColor="@android:color/white"
                android:id="@+id/viewCatalogue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="View Catalogue"
                android:textSize="14dp"/>


        </LinearLayout>




    </android.support.v7.widget.CardView>
